@{
    ViewData["Title"] = "New Profession";
}

<div class="max-w-lg mx-auto bg-white shadow rounded px-6 py-4">
    <h3 class="text-xl text-center">New Profession</h3>
    <div class="pt-4 pb-2">
        <form asp-controller="Profession" asp-action="Store" method="post">
            <input type="hidden" name="cCourseId" value="@ViewBag.CourseId">
            <div class="mb-4">
                <label class="block">
                    <span class="text-gray-700">Profession Name</span>
                    <input type="text" class="form-input mt-1 block w-full" name="name" placeholder="Job" required>
                </label>
            </div>
            <div>
                <button class="button button-blue">
                    Submit
                </button>
            </div>
            
            
        </form>
    </div>
</div>



